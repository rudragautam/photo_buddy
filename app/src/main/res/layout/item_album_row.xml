<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginEnd="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include layout="@layout/list_item_album" android:id="@+id/albumCard1"/>
        <include layout="@layout/list_item_album_short" android:id="@+id/albumCard2"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/list_item_album_short" android:id="@+id/albumCard22"/>
        <include layout="@layout/list_item_album" android:id="@+id/albumCard11"/>

    </LinearLayout>






</LinearLayout>
